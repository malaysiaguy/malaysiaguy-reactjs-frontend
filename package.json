{
  "name": "mern-profile",
  "version": "1.0.0",
  "description": "Profile app for malaysiaguy website",
  "proxy": "http://127.0.0.1:5000",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
